{
  "manifest_version": 3,
  "name": "AI 悬浮助手插件",
  "version": "1.3",
  "description": "基于智谱 AI 的桌面悬浮助手浏览器插件。",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": "icon16.png",
    "default_title": "打开 AI 助手"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "contextMenus"
  ],
  "commands": {
    "open-sidepanel": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      },
      "description": "打开AI助手侧边栏"
    },
    "close-sidepanel": {
      "suggested_key": {
        "default": "Ctrl+Shift+H"
      },
      "description": "隐藏AI助手侧边栏"
    }
  }
}